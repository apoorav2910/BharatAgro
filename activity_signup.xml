<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D3133"
    tools:context=".SignupActivity">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg1"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <View
            android:id="@+id/toggle_form"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginBottom="25dp"
            android:background="@drawable/toggle_form"
            />

        <TextView
            android:id="@+id/textSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:textSize="25sp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/playfair_display"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textColor="@color/white"
            android:paddingLeft="18dp"
            android:fontFamily="@font/comfortaa_light"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/EditName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_field"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:layout_margin="18dp"
            android:layout_marginBottom="24dp"
            android:hint="">

        </EditText>

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/comfortaa_light"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/EditMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"
            android:layout_margin="18dp"
            android:background="@drawable/form_field">

        </EditText>



        <TextView
            android:id="@+id/otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter OTP"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="5dp"
            android:fontFamily="@font/comfortaa_light"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/textotp"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="35dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"
            android:background="@drawable/form_field">

        </EditText>

        <TextView
            android:id="@+id/Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/comfortaa_light"
            android:paddingLeft="18dp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/Editpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/form_field"
            android:textColor="@color/black"
            android:layout_margin="18dp"
            android:layout_marginBottom="24dp"
            android:padding="10dp">

        </EditText>

        <android.widget.Button
            android:id="@+id/submit"
            android:layout_width="256dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:background="@drawable/loginbtn_bg"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/karla"
            android:layout_marginBottom="24dp"
            android:textColor="@color/white"
            android:backgroundTint="#1D3133"
            android:text="Sign UP">

        </android.widget.Button>

        <TextView
            android:id="@+id/loginb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="85dp"
            android:fontFamily="@font/karla"
            android:gravity="center_horizontal|top"
            android:text="I have an Account"
            android:textAppearance="@style/continue_as" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>